@model IEnumerable<Blog>
@{
    ViewData["Title"] = "Index";
  Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<table class="table table-striped">
    <thead>
        <tr>
            <th>Başlık</th>
            <th>İçerik</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.BlogTitle</td>
                <td>@Html.Raw(item.BlogContent)</td>
            </tr>
        }
    </tbody>
</table>



