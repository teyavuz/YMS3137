@model Blog
@{
    ViewData["Title"] = "AddBlog";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}




<div class="container">
    <form asp-action="AddBlog" asp-controller="Blog" method="post">

        <div class="col-lg-12">
            <div class="form-group">
                <label>Blog Başlık</label>
                <input asp-for="BlogTitle" type="text" class="form-control" />
            </div>
            <div class="form-group">
                <label>Kategori:</label>
                <select class="form-control" asp-for="CategoryId" asp-items="ViewBag.Categories">
                    <option disabled selected value="">Kategori Seç</option>
                </select>
            </div>
        </div>
        <hr />
        <div class="col-lg-12 mt-5">
            <textarea asp-for="BlogContent" id="summernote">

</textarea>
        </div>

        <button type="submit" class="btn btn-primary">Blog Oluştur</button>
    </form>
</div>



@section scripts{
    <script src="~/plugins/summernote/summernote.js"></script>
    <script>
        $(document).ready(function () {
            $('#summernote').summernote();
        });
    </script>
}

