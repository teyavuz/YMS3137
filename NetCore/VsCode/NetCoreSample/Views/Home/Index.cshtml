@model List<NetCoreSample.Models.Person>
@{
    Layout="~/Views/Shared/_Layout.cshtml";
}
<table class="table table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Ad</th>
                <th>Soyad</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var person in Model)
            {
                <tr>
                    <td>@person.PersonID</td>
                    <td>@person.PersonName</td>
                    <td>@person.PersonSurName</td>
                </tr>
            }
        </tbody>
    </table>