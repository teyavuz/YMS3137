@model Shipper
@{
    ViewBag.Title = "Güncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>
<div class="row">
    <!--Model içerisinde gerekli alanlar boş gönderilirse aşağıdaki TempData dolu olacağı için ekran görüntülenecek.-->
    @if (TempData["Bilgi"] != null)
    {
        <div class="alert alert-danger">
            <span>@TempData["Bilgi"]</span>
        </div>
    }
    <!---->
    <div class="panel panel-default">
        <div class="panel-body">
            @using (Html.BeginForm())
            {
                @Html.HiddenFor(x=>x.ShipperID)
                <div class="form-group">
                    <label>Nakliyeci Adı</label>
                    @Html.TextBoxFor(x => x.CompanyName, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Telefon No</label>
                    @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
                </div>
                @Html.ActionLink("İptal", "Index", null, new { @class = "btn btn-default" })
                <button type="submit" class="btn btn-primary">Gönder</button>
            }
        </div>
    </div>
</div>

