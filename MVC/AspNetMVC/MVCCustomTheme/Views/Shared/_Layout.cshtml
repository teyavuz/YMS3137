
@{
    
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="Mosaddek">
    <meta name="keyword" content="FlatLab, Dashboard, Bootstrap, Admin, Template, Theme, Responsive, Fluid, Retina">
    <link rel="shortcut icon" href="img/favicon.png">

    <title>FlatLab - Flat & Responsive Bootstrap Admin Template</title>

 <!--Style Bundle-->
    @Styles.Render("~/bundle/css")
</head>

<body>

    <section id="container">
        <!--header start-->
        <header class="header white-bg">
            <div class="sidebar-toggle-box">
                <div data-original-title="Toggle Navigation" data-placement="right" class="icon-reorder tooltips"></div>
            </div>
            <!--logo start-->
            <a href="index.html" class="logo">Northwind<span>Shop</span></a>
            <!--logo end-->
            <div class="nav notify-row" id="top_menu">

            </div>
            <div class="top-nav ">

            </div>
        </header>
        <!--header end-->
        <!--sidebar start-->
        <aside>
            <div id="sidebar" class="nav-collapse ">
                <!-- sidebar menu start-->
                <ul class="sidebar-menu" id="nav-accordion">
                    <li>
                        <!--Url.Action Metodu yönlendirme yapılacak olan Action ve Controller adını ister.-->
                        <a class="active" href="@Url.Action("Index","Home")">
                            <i class="icon-dashboard"></i>
                            <span>Ansayfa</span>
                        </a>
                    </li>

                    <li class="sub-menu">
                        <a href="javascript:;">
                            <i class="icon-laptop"></i>
                            <span>Ürünler</span>
                        </a>
                        <ul class="sub">
                            <li><a href="@Url.Action("Index","Product")">Ürün Listesi</a></li>
                            <li><a href="@Url.Action("Index","Category")">Kategoriler</a></li>
                            <li><a href="@Url.Action("Index","Supplier")">Tedarikçiler</a></li>
                        </ul>
                    </li>

                    <li>
                        <a href="@Url.Action("Index","Customer")">
                            <i class="icon-dashboard"></i>
                            <span>Müşteriler</span>
                        </a>
                    </li>

                    <li class="sub-menu">
                        <a href="javascript:;">
                            <i class="icon-cogs"></i>
                            <span>Satışlar</span>
                        </a>
                        <ul class="sub">
                            <li><a href="@Url.Action("Index","Order")">Satış Listesi</a></li>
                            <li><a href="@Url.Action("Index","OrderDetail")">Satış Detay</a></li>
                            <li><a href="@Url.Action("Index","Shipper")">Nakliyeciler</a></li>
                        </ul>
                    </li>
                    <li>
                        <a href="@Url.Action("Index","Employee")">
                            <i class="icon-dashboard"></i>
                            <span>Çalışanlar</span>
                        </a>
                    </li>

                </ul>
                <!-- sidebar menu end-->
            </div>
        </aside>
        <!--sidebar end-->
        <!--main content start-->
        <section id="main-content">
            <section class="wrapper">
                <!--RenderBody Start-->
                @RenderBody()
                <!--RenderBody End-->

            </section>
        </section>
        <!--main content end-->
        <!--footer start-->
        <footer class="site-footer">
            <div class="text-center">
                2013 &copy; FlatLab by VectorLab.
                <a href="#" class="go-top">
                    <i class="icon-angle-up"></i>
                </a>
            </div>
        </footer>
        <!--footer end-->
    </section>

    <!--Bundle Js-->
    @Scripts.Render("~/bundle/js")
    @RenderSection("scripts", false)
    <script>
        //owl carousel

        $(document).ready(function () {
            $("#owl-demo").owlCarousel({
                navigation: true,
                slideSpeed: 300,
                paginationSpeed: 400,
                singleItem: true,
                autoPlay: true

            });
        });

        //custom select box

        $(function () {
            $('select.styled').customSelect();
        });

    </script>

</body>
</html>

