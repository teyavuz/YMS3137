@model MVCRazorViewNorthwind.Models.Product
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddProduct</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="row">
            <form method="post">
                <div class="col-md-6">
                    <label>Ürün Adı:</label>
                    <input type="text" name="product.ProductName" />
                </div>
                <div class="col-md-6">
                    <label>Fiyat:</label>
                    <input type="text" name="product.UnitPrice" />
                </div>
                <button type="submit" class="btn btn-default">Gönder</button>
            </form>
        </div>
    </div>
</body>
</html>
