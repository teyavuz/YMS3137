
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

    <div class="container-fluid">
        <h1 class="mt-4">Dashboard</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item active">Dashboard</li>
        </ol>
        <div class="row">
            <div class="col-xl-3 col-md-6">
                <div class="card bg-primary text-white mb-4">
                    <div class="card-header">
                        <h1>0</h1>
                        Kullanıcı
                    </div>
                    
                    <div class="card-footer d-flex align-items-center justify-content-between">
                        <a class="small text-white stretched-link" href="#">View Details</a>
                        <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-md-6">
                <div class="card bg-warning text-white mb-4">
                    <div class="card-header">
                        <h1>0</h1>
                        Fotoğraf
                    </div>
                    <div class="card-footer d-flex align-items-center justify-content-between">
                        <a class="small text-white stretched-link" href="#">View Details</a>
                        <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-md-6">
                <div class="card bg-success text-white mb-4">
                    <div class="card-header">
                        <h1>0</h1>
                        Duvar Yazısı
                    </div>
                    <div class="card-footer d-flex align-items-center justify-content-between">
                        <a class="small text-white stretched-link" href="#">View Details</a>
                        <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-md-6">
                <div class="card bg-danger text-white mb-4">
                    <div class="card-header">
                        <h1>0</h1>
                        Mesaj
                    </div>
                    <div class="card-footer d-flex align-items-center justify-content-between">
                        <a class="small text-white stretched-link" href="#">View Details</a>
                        <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-12">
            <div class="row">
                <div class="col-lg-6">
                    <div class="card mb-4">
                        <div class="card-header"><i class="fas fa-table mr-1"></i>Son Kullanıcılar</div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th>User ID</th>
                                            <th>User Name</th>
                                            <th>Detay</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var user in (ViewBag.Users as List<NorthwindArea.Models.User>))
                                        {
                                            <tr>
                                                <td>@user.UserID</td>
                                                <td>@user.UserName</td>
                                                <td>
                                                   @Html.ActionLink("Detay", "Details","User", new { id=user.UserID},new { @class="btn btn-primary"})
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="card mb-4">
                        <div class="card-header"><i class="fas fa-table mr-1"></i>Son Fotoğraflar</div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Photo ID</th>
                                            <th>Location</th>
                                            <th>User Name</th>
                                            <th>Photo Title</th>
                                            <th>Published Date</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in (ViewBag.Photos as List<NorthwindArea.Models.Photo>))
                                        {
                                        <tr>
                                            <td>@item.PhotoID</td>
                                            <td>@item.Location</td>
                                            <td>@item.User.UserName</td>
                                            <td>@item.PhotoTitle</td>
                                            <td>@item.PublishedDate.Value.ToShortDateString()</td>
                                        </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
    </div>

