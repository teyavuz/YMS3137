@model NorthwindArea.Models.UserDetail
@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-header">
                <h1>@Model.FirstName @Model.LastName</h1>
            </div>
            <div class="card-body">
                <ul>
                    <li>@Model.Email</li>
                    <li>@Model.Address</li>
                    <li>@Model.Job</li>
                    <li>@Model.Gender</li>
                </ul>
            </div>
            <div class="card-footer">
                @Html.ActionLink("Geri", "Index", "Home", null, new { @class="btn btn-default"})
            </div>
        </div>
    </div>
</div>

