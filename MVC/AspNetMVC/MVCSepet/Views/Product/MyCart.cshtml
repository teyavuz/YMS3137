@model List<MVCSepet.Models.CartItem>
@{
    ViewBag.Title = "MyCart";
    Layout = "~/Views/Shared/_Layout.cshtml";
    decimal? toplamTutar = 0;
}

<div class="row">
    <div class="panel panel-body">
        <div class="panel-heading">
            <h2>Sepetim</h2>
        </div>
        <div class="panel-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Ürün Adı</th>
                        <th>Fiyat</th>
                        <th>Adet</th>
                        <th>Ara Toplam</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        toplamTutar += item.SubTotal;
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Price</td>
                            <td>@item.Quantity</td>
                            <td>@item.SubTotal</td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="col-lg-12 text-right">
                <h3>Toplam Tutar: @toplamTutar</h3>
                <button class="btn btn-primary">Alışverişi Tamamla</button>
            </div>
        </div>
    </div>
</div>

