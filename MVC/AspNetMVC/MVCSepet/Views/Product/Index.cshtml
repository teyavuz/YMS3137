@model List<MVCSepet.Models.Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="panel panel-default">
        @if (TempData["cart"] != null)
        {
            <div class="container">
                <div class="alert alert-success">
                    <span>@TempData["cart"]</span>
                </div>
            </div>
        }
        else if (TempData["emptyCart"] != null)
        {
            <div class="container">
                <div class="alert alert-warning">
                    <span>@TempData["emptyCart"]</span>
                </div>
            </div>
        }
        <div class="panel-heading">
            <h1>Ürünler</h1>
        </div>
        <div class="panel-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Ürün Adı</th>
                        <th>Ürün Fiyat</th>
                        <th>Ürün Adet</th>
                        <th>Sepete Ekle</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in Model)
                    {
                        <tr>
                            <td>@p.ProductName</td>
                            <td>@p.UnitPrice</td>
                            <td>@p.UnitsInStock</td>
                            <td>
                                @Html.ActionLink("Sepete Ekle", "AddToCart", new { id = p.ProductID }, new { @class = "btn btn-primary" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

