@model List<MVC.Models.CartModel.CartItem>
@{
    ViewData["Title"] = "MyCart";
    Layout = "~/Views/Shared/_Layout.cshtml";
    decimal? total=0;
}

    <div class="row">
        <aside class="col-lg-9">
            <div class="card">
                <table class="table table-borderless table-shopping-cart">
                    <thead class="text-muted">
                        <tr class="small text-uppercase">
                            <th scope="col">Product</th>
                            <th scope="col" width="120">Quantity</th>
                            <th scope="col" width="120">Price</th>
                            <th scope="col" class="text-right" width="200"> </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            total += item.SubTotal;
                            <tr>
                                <td>
                                    <figure class="itemside align-items-center">
                                        <!--Ürün görseli için property eklenecek-->
                                        <div class="aside"><img src="~/images/products/@item.ImagePath" class="img-sm"></div>
                                        <figcaption class="info">
                                            <a href="#" class="title text-dark">@item.Name</a>
                                        </figcaption>
                                    </figure>
                                </td>
                                <td>
                                    <!--ürün adet güncellemesi yapılacak.-->
                                    <select class="form-control">
                                        <option>@item.Quantity</option>
                                    </select>
                                </td>
                                <td>
                                    <div class="price-wrap">
                                        <var class="price">@item.Price</var>
                                    </div> <!-- price-wrap .// -->
                                </td>
                                <td class="text-right">
                                    <a data-original-title="Save to Wishlist" title="" href="" class="btn btn-light" data-toggle="tooltip"> <i class="fa fa-heart"></i></a>
                                    <a href="" class="btn btn-light"> Remove</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <div class="card-body border-top">
                    <p class="icontext"><i class="icon text-success fa fa-truck"></i> Free Delivery within 1-2 weeks</p>
                </div> <!-- card-body.// -->

            </div> <!-- card.// -->

        </aside> <!-- col.// -->
        <aside class="col-lg-3">

            <div class="card mb-3">
                <div class="card-body">

                    <div class="form-group">
                        <label>Have coupon?</label>
                        <div class="input-group">
                            <input type="text" class="form-control" name="" placeholder="Coupon code">
                            <span class="input-group-append">
                                <button class="btn btn-primary">Apply</button>
                            </span>
                        </div>
                    </div>

                </div> <!-- card-body.// -->
            </div> <!-- card.// -->

            <div class="card">
                <div class="card-body">
                    <dl class="dlist-align">
                        <dt>Total price:</dt>
                        <dd class="text-right">@total.ToString()</dd>
                    </dl>
                    <hr>
                    <p class="text-center mb-3">
                        <img src="../images/misc/payments.png" height="26">
                    </p>
                    <a asp-action="CompleteCart" asp-controller="Home" class="btn btn-primary btn-block"> Alışverişi Tamamla </a>
                @*<button type="submit" class="btn btn-primary btn-block">Alışverişi Tamamla</button>*@
                    <a asp-action="Index" asp-controller="Home" class="btn btn-light btn-block">Alışverişe Devam Et</a>
                </div> <!-- card-body.// -->
            </div> <!-- card.// -->

        </aside> <!-- col.// -->


    </div>

    

