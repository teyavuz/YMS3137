@model List<Product>
@{
    ViewData["Title"] = "Home Page";
}

<div class="card">
    <div class="card-body">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-sm-4 col-md-2">
                    <h4 class="text-center bg-light">@item.ProductName</h4>

                    <div class="color-palette-set">
                        <img src="~/images/products/@item.ImagePath" style="width:150px; height:auto" />
                        <div class="card">
                            <div class="card-body">
                                <div class="row">
                                    <span>@item.Price TL</span>

                                </div>
                            </div>
                            <div class="card-footer">
                                <button class="btn btn-sm btn-primary">Sepete ekle</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
    