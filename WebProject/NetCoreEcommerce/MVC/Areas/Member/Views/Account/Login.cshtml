@model AppUserLoginVM
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="card mx-auto" style="max-width: 380px; margin-top:100px;">
        <div class="card-body">
            <h4 class="card-title mb-4">Giriş Yap</h4>
            <form asp-action="Login" asp-controller="Account" method="post">
              
                <div class="form-group">
                    <input asp-for="UserName"  class="form-control" placeholder="kullanıcı adı" type="text">
                </div> <!-- form-group// -->
                <div class="form-group">
                    <input asp-for="Password" class="form-control" placeholder="şifre" type="password">
                </div> <!-- form-group// -->

                <div class="form-group">
                    <a href="#" class="float-right">Forgot password?</a>
                    <label class="float-left custom-control custom-checkbox"> 
                    <input asp-for="RememberMe" type="checkbox" class="custom-control-input" checked="">
                    <div class="custom-control-label"> Beni Hatırla </div> 
                    </label>
                </div> <!-- form-group form-check .// -->
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block"> Giriş Yap  </button>
                </div> <!-- form-group// -->
            </form>
        </div> <!-- card-body.// -->
    </div>

