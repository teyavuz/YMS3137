@model Category
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-sm-6">
                                <h2>Kategori Ekle</h2>
                            </div>
                            <div class="col-sm-6">
                                <a asp-action="Index" asp-controller="Category" class="btn btn-success float-md-right">Kategori Listesi</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <form asp-action="Create" asp-controller="Category" method="post">
                        <div class="form-group">
                            <label>Kategori Adı</label>
                            <input asp-for="CategoryName" type="text" class="form-control" placeholder="kategori adı" />
                        </div>
                        <div class="form-group">
                            <label>Kategori Açıklama</label>
                            <input asp-for="Description" type="text" class="form-control" placeholder="açıklama" />
                        </div>
                        <div class="form-group">
                            <label>Ana Kategori</label>
                          <select asp-for="MainCategory" class="form-control custom-select" asp-items="ViewBag.MainCategories">
                              <option selected="" disabled>Lütfen Ana Kategori Seçin</option>
                          </select>
                        </div>
                        <button type="submit" class="btn btn-success">Kategori Ekle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

